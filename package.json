{
  "name": "food-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "imports": {
    "#auth-actions": {
      "storybook": "./src/__mocks__/auth-actions.mock.ts",
      "default": "./src/features/auth/actions/authAction"
    },
    "#*": [
      "./*",
      "./*.ts",
      "./*.tsx"
    ]
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --skipLibCheck true --noEmit",
    "type-check:full": "tsc --skipLibCheck true --noEmit",
    "clean": "git clean -xdf node_modules dist .next",
    "prepare": "husky",
    "migrate:dev": "dotenv -e .env.local -- npx prisma migrate dev --name init",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "reset:dev": "dotenv -e .env.local -- prisma db reset",
    "seed:dev": "dotenv -e .env.local -- prisma db seed",
    "postinstall": "prisma generate",
    "validate:prisma:dev": "dotenv -e .env.local -- prisma validate",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "**/*.prisma": [
      "prisma format",
      "npm run validate:prisma:dev"
    ]
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@conform-to/react": "^1.13.1",
    "@conform-to/zod": "^1.13.1",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.16.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.58.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-auth": "^5.0.0-beta.29",
    "prisma": "^6.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.64.0",
    "supabase": "^2.48.3",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^9.1.15",
    "@storybook/addon-docs": "^9.1.15",
    "@storybook/addon-vitest": "^9.1.15",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.15",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "storybook": "^9.1.15",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "@storybook/nextjs-vite": "^9.1.15",
    "vitest": "^4.0.3",
    "playwright": "^1.56.1",
    "@vitest/browser-playwright": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.3"
  }
}
